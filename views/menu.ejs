<% layout('layouts/main')%>
<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <%- include('./partials/flash.ejs') %>
  <h1 class="h2"><%= post.Title %> </h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/posts">Posts</a></li>
          <li class="breadcrumb-item active">Add Menu Item</li>
        </ol>
      </nav>
    </div>
  </div>

</div>


<form action="/admin/posts/menu/<%= post._id %>" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="Title">Title</label>
      <input type="text" class="form-control" id="Title" name="Title" value="" placeholder="Title" required>
    </div>

    <div class="col">
        <label for="Title">Price</label>
        <input type="number" class="form-control" id="Title" name="price" value="" placeholder="Price" required>
      </div>
    

    <div class="form-group mb-4">
      <label for="details"> Menu Details</label>
      <textarea class="form-control" name="details" id="details" cols="30" rows="12" placeholder="post Details" required></textarea>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Add Menu</button>
  </div>

  

</form>